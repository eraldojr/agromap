<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgroMap.InspectionScreen">
    <ContentPage.Content>
        <StackLayout
                Orientation="Vertical"
                Padding="10"
                x:Name="layout_main"
                >
            <Label x:Name="lbl_inspections"
                   HorizontalOptions="FillAndExpand"
                   FontSize="25"
                   HorizontalTextAlignment="Center"
                   TextColor="#125e68"
                   />
            
            <ActivityIndicator x:Name="actInspectionScreen" Color="Red" IsRunning="false" IsVisible="False" />
            <Button x:Name="btn_cancel_sync"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    TextColor="#fff"
                    BackgroundColor="#f44b42"
                    IsVisible="False"
                    Clicked="btn_cancel_sync_Clicked"
                    />
            <StackLayout x:Name="super_options"
                         IsVisible="False"
                         >
            </StackLayout>
            <StackLayout x:Name="main_layout"
                         VerticalOptions="FillAndExpand"
                         >
                <Button
                    x:Name="btn_create"
                    BackgroundColor="#23a1b2"
                    TextColor="#FFF"
                    Clicked="Btn_New_Inspection_Click"
                    IsVisible="True"
                    />
                <ListView x:Name="list_view_inspections"
                              IsPullToRefreshEnabled="True"
                          VerticalOptions="FillAndExpand"
                          >
                    <ListView.Header>
                        <StackLayout HeightRequest="0" />
                    </ListView.Header>
                    <ListView.ItemTemplate >
                        <DataTemplate>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Footer>
                        <StackLayout HeightRequest="0" />
                    </ListView.Footer>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>